@model IEnumerable<BibliotecaVirtual.Models.Autor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_two.cshtml";
}

<section id="team">
    <div class="container wow fadeInUp">
        <div class="row">
            <div class="col-md-12">
                <h3 class="section-title">Autores</h3>
                <div class="section-title-divider"></div>
                <p class="section-description"><p>@Html.ActionLink("Crear nuevo autor", "Create", null, new { @class = "btn btn-info" })</p></p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="member">
                        <div class="pic"><img src="~/Content/ProOnliPc/img/team-1.jpg" alt=""></div>
                        <h4>@Html.DisplayFor(modelItem => item.Nombre)</h4>
                        <span>Chief Executive Officer</span>
                        <div class="social">
                            @Html.ActionLink("Editar", "Edit", new { id = item.IdAutor }) 
                            @Html.ActionLink("Detalles", "Details", new { id = item.IdAutor }) 
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.IdAutor })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>