@model BibliotecaVirtual.Models.Autor

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout_two.cshtml";
}

<section id="services">
    <div class="container wow fadeInUp">
        <div class="row">
            <div class="col-md-12">
                <h3 class="section-title">Eliminar</h3>
                <div class="section-title-divider"></div>
                <p class="section-description">¿Está seguro de querer eliminar este autor?</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-10 service-item">
                <div class="service-icon"><i class="fa fa-database"></i></div>
                <h4 class="service-title">@Html.DisplayNameFor(model => model.Nombre)</h4>
                <p class="service-description"> @Html.DisplayFor(model => model.Nombre)</p>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                        <a href="@Url.Action("Index", "Autor")" class="btn btn-info"><i class="fa fa-reply"></i><span><strong> Regresar</strong></span></a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

